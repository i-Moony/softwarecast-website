import { Image } from "astro:assets";

const { src, alt = "icon", url, text = "Ссылка", button = "Перейти" } = Astro.props;
---

<a href={url} class="flex flex-row items-center justify-between gap-2 text-[#eef5fd] text-md md:text-xl hover:bg-[#d5e8ff]/20 p-4">
    <div class="flex flex-row items-center gap-3">
        <div class="bg-[#d5e8ff] rounded-xl md:rounded-2xl p-1">
            <Image {src} {alt} width=96 class="w-fit max-w-8 md:max-w-12"></Image>
        </div>
        <span>{text}</span>
    </div>
    <button class="hover:cursor-pointer p-2 bg-[#d5e8ff]/75 rounded-xl text-[#0b033b]">{button}</button>
</a>
