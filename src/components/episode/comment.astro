---
interface Comment {
    link: string;
    author: string;
    content: string;
    respond?: string;
}

interface Props {
    comment: Comment;
}

const { comment } = Astro.props;
---

<div class="flex flex-col gap-0.5">
    <p class="font-bold">
        &gt; Автор:
        <a href={comment.link} target="_blank" class="underline w-fit">
            {comment.author}
        </a>
    </p>
    <p>{comment.content}</p>
</div>
{
    comment.respond && (
        <div class="flex flex-col gap-0.5 mt-2 xss:ml-4 lg:ml-8 pl-4 border-l border-brand-black/50">
            <div class="flex flex-row items-center gap-1.5 font-bold">
                <p>&gt; СофтварьКаст</p>
            </div>
            <p>{comment.respond}</p>
        </div>
    )
}
